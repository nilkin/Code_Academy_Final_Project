@model WishViewModel
<main>
     @*breadcrumb-section start*@ 
    <partial name="_breadcrumbs" model="@Model.Breadcrumb" />
     @*breadcrumb-section end 
     shop-order start*@ 
    <section class="shop-order wrapper-top">
        <div class="container grid-wraper">
            <div class="row">
                <div class="col-12">
                    <h3 class="title text-center text-md-left text-capitalize">Wishlist</h3>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center" scope="col">Product Image</th>
                                    <th class="text-center" scope="col">Product Name</th>
                                    <th class="text-center" scope="col">Price</th>
                                    <th class="text-center" scope="col">action</th>
                                    <th class="text-center" scope="col">Cart</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.WishItems)
                                {  <tr>
                                            <th class="text-center" scope="row">
                                                <img src="~/uploads/@item.Photo" alt="img" class="img-fluid">
                                            </th>
                                            <td class="text-center">
                                                <span class="whish-title">@item.Name</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="shop-order-price">
                                                    $@item.Price
                                                </span>
                                            </td>

                                            <td class="text-center">
                                                <a asp-controller="Shop" asp-action="RemoveFromWish" asp-route-id="@item.Id" data-id="@item.Id" class="wish-trash"> <span class="trash"><i class="fas fa-trash-alt"></i> </span></a>
                                            </td>
                                            <td class="text-center">
                                                <a asp-controller="Shop" asp-action="AddFromWishToCart" asp-route-id="@item.Id" data-id="@item.Id" class="add-from-wish-to-cart btn third-btn btn-theme2 text-uppercase">Add To Cart</a>
                                            </td>
                                        </tr>
                                    }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </section>
     @*shop-order end*@ 
     @*common banner news-letter end*@ 
    <partial name="_newsletters" model="@Model.Subscriber" />
     @*common banner news-letter end*@ 
</main>
