@section Javascript{
    <script src="~/Assets/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/Assets/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>


        $(document).ready(function () {

            $('#accordion').submit(function (e) {
                e.preventDefault();
                console.log($('#accordion'))
                let formData = $(this).serialize();

                $.ajax({
                    url: "/account/chekout",
                    type: "post",
                    data: formData,
                    dataType: "json",
                    beforeSend: function () {
                        console.log("request preparing")
                    },
                    success: function (res) {
                        console.log("success")
                    },
                    error: function (err) {
                        if (err.status === 404) {
                            swal("Notice!", err.responseJSON.message);
                        }
                        else if (err.status === 400) {
                            swal("Notice!", err.responseJSON.message);
                        }
                        else if (err.status === 500) {
                            Swal.fire({
                                icon: 'error',
                                title: 'ERROR',
                                text: 'Some of inputs is empty',
                                footer: 'Please enter information correctly!',

                            })
                        }
                    },
                    complete: function (status) {
                        if (status.status === 200) {
                            Swal.fire({
                                position: 'top-center',
                                icon: 'success',
                                title: status.responseJSON.message,
                                showConfirmButton: false,
                                timer: 3500
                            })
                            setTimeout(function () {
                                window.location = "/Account/profile";
                            }, 4000);
                        }

                    }
                });
            });
        });
    </script>

}